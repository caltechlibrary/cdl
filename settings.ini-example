[settings]
# Path to the sqlite database, relative to here.
DATABASE_FILE = dibs.db

# Email details. The user has to be an account authenticated to the server.
MAIL_HOST   = localhost
MAIL_PORT   = 25
MAIL_SENDER = helpdesk@library.caltech.edu

# User session details.
COOKIE_NAME     = dibs
SESSION_TIMEOUT = 604800

# Time a user must wait between when they return a title and when they can
# loan it out again (in minutes).
RELOAN_WAIT_TIME = 30

# Feedback form URL.
FEEDBACK_URL = https://forms.gle/uLGcpuTcgBeb9R6Q6

# Set to True to enable detailed debug tracing and turn on Bottle debug mode
# features, such as disabling the template cache. The output will be sent to
# the server error log, or to stderr, depending on how the server is running.
# Note: when using run-server, its options override this value.
DEBUG = False
